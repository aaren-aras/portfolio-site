---
import NavBar from '../components/NavBar.astro';
import ForceDirectedGraph from '../components/ForceDirectedGraph.astro';
import AudioPlayer from '../components/AudioPlayer.astro';
import EffectButtons from '../components/EffectButtons.astro';
import PortfolioButtons from '../components/PortfolioButtons.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!-- TO DO: add all main layout UI buttons on the corners -->

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio website!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bkgd"></div>
		<!-- <EffectButtons/> -->
		<ForceDirectedGraph/>
		<slot />
		<NavBar/>
		<AudioPlayer/>
		<PortfolioButtons/>
	</body>
</html>

<style lang="scss">
	@import '../global.scss';
	
	body {
		.bkgd {
			// Consider (repeating-)linear-gradient or (repeating-)radial-gradient?
			// background: $primary;
			background: repeating-conic-gradient($primary 50%, $accent-2 50%);
			background-size: 100% 100%;		
			opacity: 0.1;
			z-index: -1;
			position: fixed;
			inset: 0; 
			animation: gradient 0.1s linear infinite;

			&::after {
				content: '';
				background: url('linkedin-me.png');
				filter: contrast(50%) opacity(100%) blur(4px) drop-shadow(30em 1px 5px $accent-3);
				z-index: -1;
				position: fixed;
				right: 2rem;
			}

			@keyframes gradient {
			0% {
				background-position: 0% 0%;
			}
			100% {
				background-position: 50% 100%;
			}
		}
		}
	}
</style>
