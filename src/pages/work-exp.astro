---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Aaren Arasaratnam">
	<!-- <img class="astro-a" src="background-2.gif" alt="Background Art"> -->
	<main>
		<h1>Hi! This is a <span class="text-gradient">portfolio </span>site!!</h1>
		<h2>Can you believe it?!?!?</h2>
		<p class="instructions">
			To get started, check out some <code>stuff</code> below, in one of these cards! Or not<br/>
			<strong>Challenge:</strong> Try not to get bored!!!!
		</p>
		
	</main>
</Layout>

<style lang="scss">
	.astro-a {
		width: 100%;
		height: 200%;	
		object-fit: cover;
		z-index: -1;
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%) translatey(20%);
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;

		h1 {
			// width: 400%;
			font-size: 4rem;
			font-weight: 700;
			line-height: 1;
			text-align: center;
			margin-bottom: 1em;

			.text-gradient {
				background-image: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-size: 400%;
				background-position: 0%;
			}
		}

		.instructions {
			margin-bottom: 2rem;
			border: 1px solid rgba(var(--accent-light), 25%);
			background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
			padding: 1.5rem;
			border-radius: 8px;

			code {
				font-size: 0.8em;
				font-weight: bold;
				background: rgba(var(--accent-light), 12%);
				color: rgb(var(--accent-light));
				border-radius: 4px;
				padding: 0.3em 0.4em;
			}

			strong {
				color: rgb(var(--accent-light));
			}
		}
	}
</style>
